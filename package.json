{
  "name": "lemoncode_bootcamp_backend_laboratorio04",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/api/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/api/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest --run --coverage",
    "mongo:start": "docker rm -f mongo 2>NUL & docker run -d --name mongo -p 27017:27017 -v \"%CD%/seed/dump:/dump\" -e MONGO_INITDB_DATABASE=house-booking mongo:6",
    "mongo:seed": "docker exec -it mongo sh -lc \"mongorestore --drop --dir /dump/house-booking --nsFrom 'house-booking.*' --nsTo 'house-booking.*'\"",
    "mongo:stop": "docker rm -f mongo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mongodb": "^6.19.0"
  }
}
